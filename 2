class ListNode:
    def __init__(self, val=0, next=None):
        self.val = val
        self.next = next

def swap_pairs(head):

    if not head or not head.next:
        return head

    # Змінюємо місцями перший і другий вузли у парі
    new_head = head.next
    head.next = swap_pairs(new_head.next)
    new_head.next = head

    return new_head

def print_list(head):
    current = head
    while current:
        print(current.val, end=" -> ")
        current = current.next
    print("None")

# Створюємо список [1, 2, 3, 4]
head = ListNode(1, ListNode(2, ListNode(3, ListNode(4))))
print("Input:")
print_list(head)

new_head = swap_pairs(head)

print("\nOutput:")
print_list(new_head)
